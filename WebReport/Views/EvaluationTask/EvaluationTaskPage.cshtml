@using Model
@model Model.EvaluationTask

@{
    ViewData["Title"] = "Заявка на оценку № 0154";
}

<div class="row">
    <div class="col">
        Объект оценки
    </div>
    <div class="col">
        <a class="btn btn-primary">Добавить объект</a>
    </div>
</div>
<div class="row">
    <table class="table table-hover text-nowrap" style="width:100%">
        <thead>
            <tr>
                <th>
                    Тип объекта
                </th>
                <th>
                    Назначение
                </th>
                <th>
                    Адрес
                </th>
                <th>Статус</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
</div>
<div class="row">
    <div class="col">
        <label class="form-label">Тип стоимости</label>
    </div>
    <div class="col">
        <select class="from-select" asp-for="Target" asp-items="Html.GetEnumSelectList(typeof(TargetType))"></select>
    </div>
</div>
<div class="row">
    <div class="col">
        <label class="form-label" asp-for="IntendedUse"></label>
        <textarea rows="5" class="form-control" asp-for="IntendedUse"></textarea>
    </div>
</div>
<div class="row">
    <div class="col">
       
            <form method="post">
            <div class="btn-group" role="group">
                @foreach (var customer in Enum.GetValues(typeof(CustomerType)))
                {
                    <input type="radio" asp-for="Customers" name="radioCustomer" id="@((int)customer)" 
                    class="btn-check" value="@customer" autocomplete="off" checked="@((int)customer == 0)">
                    @if (((int)customer) == 0)
                    {
                        <label asp-for="Customers" for="0" class="btn btn-outline-primary">Частное лицо</label>
                    }
                    else
                    {
                        <label asp-for="Customers" for="1" class="btn btn-outline-primary">Организация</label>
                    }
                }
            </div>
                <br /><br />
                <input type="submit" name="name" value="Submit" asp-action="SelecteCustomer" />
            </form>
        
    </div>
</div>


