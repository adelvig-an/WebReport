@model List<Model.EvaluationTask>

@{
    ViewData["Title"] = "Все заявки";
}

<div class="row align-items-center">
        <div class="col-md-6">
            <div class="mb-3">
                <h5 class="card-title">Заявки на оценку <span class="text-muted fw-normal ms-2">(*)</span></h5>
            </div>
        </div>
        <div class="col-md-6">
            <div class="d-flex flex-wrap align-items-center justify-content-end gap-2 mb-3">
                <div>
                <a asp-controller="EvaluationTask" asp-action="EvaluationTaskPage" class="btn btn-primary">
                    <i class="fa-solid fa-plus"></i>
                    &nbsp;Новый отчет</a>
                </div>
                <div class="dropdown">
                <a class="btn btn-link text-muted py-1 font-size-16 shadow-none dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa-solid fa-ellipsis"></i></a>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li><a class="dropdown-item" href="#">Новая заявка</a></li>
                        <li><a class="dropdown-item" href="#">В работе</a></li>
                        <li><a class="dropdown-item" href="#">Согласование</a></li>
                        <li><a class="dropdown-item" href="#">Подписан</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="">
                <div class="table-responsive">
                    <table class="table project-list-table table-nowrap align-middle table-borderless">
                        <thead>
                            <tr>
                                <th scope="col">Номер заявки</th>
                                <th scope="col">Дата заявки</th>
                                <th scope="col">Дата составления</th>
                                <th scope="col">Заказчик</th>
                                <th scope="col">Оценщик</th>
                                <th>Статус</th>
                                <th scope="col" style="width: 200px;"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><a href="#" class="text-body">@item.Number</a></td>
                                    <td>@item.DateApplication.ToString("d")</td>
                                    <td>15.08.2022</td>
                                    <td>Иванов Иван Иванович</td>
                                    <td>Сергеев Егор Павлович</td>
                                    <td>Подписан</td>
                                    <td>
                                        <ul class="list-inline mb-0">
                                            <li class="list-inline-item">
                                                <a href="#" data-bs-toggle="tooltip" data-bs-placement="top" title="Редактировать" class="px-2 text-primary"><i class="fa-solid fa-pen"></i></a>
                                            </li>
                                            <li class="list-inline-item">
                                                <a href="#" data-bs-toggle="tooltip" data-bs-placement="top" title="Удальть" class="px-2 text-danger"><i class="fa-solid fa-trash"></i></a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            }
                            
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="row g-0 align-items-center pb-4">
        <div class="col-sm-6">
            <div><p class="mb-sm-0">Showing 1 to 10 of 57 entries</p></div>
        </div>
        <div class="col-sm-6">
            <div class="float-sm-end">
                <ul class="pagination mb-sm-0">
                    <li class="page-item disabled">
                    <a href="#" class="page-link">
                        <i class="fa-solid fa-angle-left"></i>
                        </a>
                    </li>
                    <li class="page-item active"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item"><a href="#" class="page-link">3</a></li>
                    <li class="page-item"><a href="#" class="page-link">4</a></li>
                    <li class="page-item"><a href="#" class="page-link">5</a></li>
                    <li class="page-item">
                    <a href="#" class="page-link"><i class="fa-solid fa-angle-right"></i></a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

