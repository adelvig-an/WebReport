@model List<Model.User>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Пользователи
            </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Home" asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> &nbsp; Новый пользователь
                </a>
        </div>
    </div>

    <br /><br />

    @if(Model.Count()>0)
    {
        <table class="table table-hover text-nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Login
                    </th>
                    <th>
                        Password
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                    <tr>
                        <td>@obj.Id</td>
                        <td>@obj.Login</td>
                        <td>@obj.Password</td>
                        <td>
                            <a asp-route-id="@obj.Id" class="btn btn-primary" asp-action="Create"><i class="fa-regular fa-pen-to-square"></i></a>
                            <a asp-route-id="@obj.Id" class="btn btn-danger" asp-action="Delete"><i class="fa-solid fa-trash-can"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Нет данных.</p>
    }
</div>
